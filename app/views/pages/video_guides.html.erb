<meta property="og:image" content="<%= image_url 'og/fitness-for-hackers-video-guides.jpg' %>"/>
<meta property="og:image:secure_url" content="<%= image_url 'og/fitness-for-hackers-video-guides.jpg' %>"/>
<meta name="twitter:card" content="summary_large_image"/>
<meta name="twitter:title" content="Fitness for Hackers - Video Guides"/>
<meta name="twitter:image" content="<%= image_url 'og/fitness-for-hackers-video-guides.jpg' %>"/>

<section class="container hero video-guides">
  <h1 class="title">Video Guides</h1>
  <p class="description">
    Watch below or view the entire playlist <%= link_to 'here', 'https://www.youtube.com/playlist?list=PLY1MyaXZUqfzdi44YvAnqKHsZ0s7gyFxL', target: :_blank %>.
  </p>

  <% @video_guides.in_groups_of(3).each do |guides| %>
    <div class="row">
    <% guides.each do |workout_name, video_id| %>
      <div class="column">
        <% if workout_name %>
          <%= video_guide_image(workout_name) %>
          <a class="button button-clear openmodale" data-video-id="<%= video_id %>" data-video-title="<%= workout_name %>"><%= workout_name %></a>
        <% end %>
      </div>
    <% end %>
    </div><br>
  <% end %>
</section>

<%= render "video_player" %>
